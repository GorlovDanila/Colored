<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.controller.AuthController"
          alignment="CENTER"
          hgap="10"
          vgap="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Введите никнейм: "
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <TextField id="nameInput" fx:id="nameInput"
               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Создать лобби: "
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField id="newLobbyInput" fx:id="newLobbyInput"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button id="newLobbyBtn" text="Ok"
            onAction="#newLobbyAction" fx:id="newLobbyBtn"
            GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label text="Присоединиться к лобби: "
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField id="joinLobbyInput" fx:id="joinLobbyInput"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button id="joinLobbyBtn" text="Ok"
            onAction="#joinLobbyAction" fx:id="joinLobbyBtn"
            GridPane.columnIndex="2" GridPane.rowIndex="2"/>

</GridPane>
