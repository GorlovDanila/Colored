<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.controller.WaitingJoinerController"
          alignment="CENTER"
          hgap="10"
          vgap="10"
          styleClass="gp-auth"
          stylesheets="main.css">

    <Label text="0000" fx:id="lobbyId" styleClass="label-form"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label text="Ожидание игроков" styleClass="label-form"
           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Создатель: " styleClass="label-form"
           GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <Label text="Sample" fx:id="creatorLabel" styleClass="label-form"
           GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Подключено:" styleClass="label-form"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <Label text="1" fx:id="connectedLabel" styleClass="label-form"
           GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button id="startBtn" text="Готов" styleClass="btn, btn-sm, btn-success"
            onAction="#startAction" fx:id="startBtn"
            GridPane.columnIndex="0" GridPane.rowIndex="3"/>

</GridPane>
